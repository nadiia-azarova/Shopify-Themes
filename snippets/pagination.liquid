{% if paginate.pages > 1 %}
    <nav class="pagination">
        {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}" class="pagination__elem pagination__elem_link">{% render 'icon-arrow-lt' %}Previous</a>
        {% endif %}
        {% for part in paginate.parts %}
            {% if part.is_link %}
                <a href="{{ part.url }}" class="pagination__elem pagination__elem_link">{{ part.title }}</a>
            {% else %}
                <span class="pagination__elem pagination__elem_span">{{ part.title }}</span>
            {% endif %}
        {% endfor %}
        {% if paginate.next %}
            <a href="{{ paginate.next.url }}" class="pagination__elem pagination__elem_link">Next{% render 'icon-arrow-rt' %}</a>
        {% endif %}
    </nav>
{% endif %}
