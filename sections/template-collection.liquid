<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="section__heading heading heading_a heading_center">{{ collection.title }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <div class="filter-btns">
                <a href="{{ collection.url }}?sort_by={{ collection.sort_by }}">Clear All</a>
            </div>
            <form class="filter">
                {% for filter in collection.filters %}
                    {% unless filter.param_name == 'filter.v.availability' %}
                        {% case filter.type %}
                            {% when 'list' %}
                                <div class="filter__block">
                                    <h4 class="heading heading_d">{{ filter.label }}</h4>
                                    <ul class="filter-list">
                                    {% for filter_value in filter.values %}
                                        <li class="filter-list__item">
                                            <input 
                                                type="checkbox" 
                                                name="{{ filter.param_name }}"
                                                value="{{ filter_value.value }}"
                                                id="filter_{{ filter.param_name }}_{{ forloop.index }}" 
                                                class="filter-list__checkbox" 
                                                tabindex="-1"
                                            >
                                            <label 
                                                for="filter_{{ filter.param_name }}_{{ forloop.index }}" 
                                                class="filter-list__label"
                                            >
                                                {% if filter_value.active %}
                                                    {% render 'icon-checkbox-checked' %}
                                                {% else %}
                                                    {% render 'icon-checkbox-unchecked' %}
                                                {% endif %}
                                                <span class="filter-list__txt">{{ filter_value.label }}</span>
                                                <span class="filter-list__counter">{{ filter_value.count }}</span> 
                                            </label>
                                        </li> 
                                    {% endfor %}
                                    </ul>
                                </div>
                            {% when 'boolean' %}
                                <div class="filter__block">
                                    <h4 class="heading heading_d"></h4>
                                    <ul class="filter-list">
                                        <li class="filter-list__item">
                                            <input 
                                                type="checkbox" 
                                                name="mono" 
                                                value="{{ filter_value.value }}"
                                                id="mono" 
                                                class="filter-list__checkbox" 
                                                tabindex="-1"
                                            >
                                            <label for="mono" class="filter-list__label">
                                                {% if filter_value.active %}
                                                    {% render 'icon-checkbox-checked' %}
                                                {% else %}
                                                    {% render 'icon-checkbox-unchecked' %}
                                                {% endif %}
                                                <h4 class="filter-list__txt heading heading_d">{{ filter_value.label }}</h4>
                                                <div class="filter-list__counter">{{ filter_value.count }}</div>
                                            </label>
                                        </li>
                                    </ul>
                                </div>
                            {% when 'price_range' %}
                                <div class="filter__block">
                                    <h4 class="filter__heading heading heading_d">{{ filter_value.label }}</h4>
                                    <div class="range-slider">
                                        <div class="range-slider__values-wrap">
                                            <span class="range-slider__txt">{{ cart.currency.symbol }}</span>
                                            <span class="range-slider__values range-slider__values_min"></span>
                                            <span class="range-slider__txt">&ndash;</span>
                                            <span class="range-slider__values range-slider__values_max"></span>
                                        </div>
                                        <input
                                            name="{{ filter.min_value.param_name }}"
                                            {% if filter.min_value.value -%}
                                                value="{{ filter.min_value.value | money_without_currency | replace: ',', '' }}"
                                            {%- endif %}
                                            placeholder="0"
                                            min="0" 
                                            max="{{ filter.range_max | money_without_currency | replace: ',', '' }}" 
                                            step="10" 
                                            type="range"
                                            class="range-slider__range"
                                        >
                                        <input 
                                            name="{{ filter.max_value.param_name }}"
                                            {% if filter.max_value.value -%}
                                                value="{{ filter.max_value.value | money_without_currency | replace: ',', '' }}"
                                            {%- endif %}
                                            placeholder="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                                            min="0" 
                                            max="{{ filter.range_max | money_without_currency | replace: ',', '' }}" 
                                            step="10" 
                                            type="range"
                                            class="range-slider__range"
                                        >
                                    </div>
                                </div>
                        {% endcase %}
                    {% endunless %}
                {% endfor %}
                <button type="submit" class="filter__apply-btn btn btn_dark">Show {{ filter.values.size }} items</button>
            </form>
        </div>
        <div class="col-9">
            <ul class="products">
            {% paginate collection.products by 12 %}
                {% for product in collection.products %}
                    {% render 'product-card', product: product %}
                {% endfor %}
                </ul>
                {% render 'pagination', paginate: paginate %}
            {% endpaginate %}
        </div>
    </div>
</div>
