<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
  </head>
  <body class="page-full">
    <header class="page-full__header">
      <div class="center-wrap">
        <div class="logo">{% render 'logo' %}</div>
      </div>
    </header>
    <main class="page-full__main">
      <div class="center-wrap">
        {{ content_for_layout }}
      </div>
    </main>
    <footer class="page-full__footer">
      <div class="center-wrap">
        {% section 'go-back-link' %}
      </div>
    </footer>
    {% case template %}
      {% when 'cart' %}
        {{ 'qty-btn.js' | asset_url | script_tag }}
        {{ 'modal.js' | asset_url | script_tag }}
      {% when 'customers/login' %}
        {{ 'login.js' | asset_url | script_tag }}
      {% else %}
    {% endcase %}
  </body>
</html>
